<div class="container mt-3">
  <h1>Welcome to your dashboard, <%= current_user.first_name %>!</h1>
  <div class="container">
    <% if current_user.vehicles %>
      <h4>Effortlessly drive through Gotham in:</h4>
      <div class="row mt-3 gap-1">
        <% current_user.vehicles.each do |vehicle| %>
          <div class="col-md-3 mb-44" style="width: 16rem">
            <div class="card text-light text-center">
              <%= image_tag vehicle.image, class:"card-img", style:"filter: brightness(75%)", crop: :fill, height: 200, width: 50%>
              <div class="card-img-overlay p-2">
                <h5 class="card-title pt-5"><strong> <%= link_to vehicle.name, vehicle, class:"text-decoration-none text-white"%></strong></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= link_to "New vehicle", new_vehicle_path, class:"btn btn-dark mt-2"%>
  </div>
  <div class="container mt-4">
    <% if current_user.bookings %>
      <h4>Here are your bookings for the near future:</h4>
      <div class="row mt-3 gap-1">
        <% current_user.bookings.each do |booking| %>
          <div class="col-md-3 mb-44" style="width: 16rem">
            <div class="card text-light text-center">
              <%= image_tag booking.vehicle.image, class:"card-img", style:"filter: brightness(75%)", crop: :fill, height: 200, width: 50%>
              <div class="card-img-overlay p-2">
                <h5 class="card-title pt-5"><strong> <%= booking.vehicle.name %></strong></h5>
                <p><%= link_to "Show vehicle", vehicle_path(booking.vehicle), class:"text-decoration-none text-white" %> </p>
                <p><%= link_to "Update booking", edit_vehicle_booking_path(id: booking, vehicle_id: booking.vehicle), class:"text-decoration-none text-white" %> </p>
                <p><%= link_to "Cancel booking", vehicle_booking_path(id: booking, vehicle_id: booking.vehicle), class:"text-decoration-none text-white", data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to cancel your booking?'} %> </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <p><%= link_to "Book another!", vehicles_path, class:"btn btn-info" %></p>
  </div>
</div>
