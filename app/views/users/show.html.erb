<div class="container mt-3">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <strong>Bio:</strong>
  <%= @user.bio %>
  <%= image_tag @user.image %>
  <br>
  <strong>Listings:</strong><br><br>
  <% @user.vehicles.each do |vehicle| %>
    <%= link_to "#{vehicle.name}", vehicle_path(vehicle) %><br>
    <br>
  <% end %>
  <p><%= link_to "Back to vehicles", vehicles_path %></p>
</div>

<div class="container">
  <%= image_tag @user.image, class:"banner", style:"filter: brightness(75%)", crop: :fill%>
  <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
  <p>Change your life and learn to code at one of our campuses around the world.</p>
  <a class="btn btn-flat" href="#">Apply now</a>
</div>
