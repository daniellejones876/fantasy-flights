<div class="container mt-3 text-center">
<%# <p style="color: green"><%= notice</p> %>
  <h1>Super Portal</h1>
  <div class="container bg-light">
    <div class="row gap-3">
      <%# <div id="vehicles"> %>
      <% @vehicles.each do |vehicle| %>
        <div class="card col-4" style="width: 24rem">
          <div class="card-body">
              <%= image_tag vehicle.image, class:"card-img-top", crop: :fill%>
              <%# <%= vehicle.image %>
              <strong>Name:</strong> <%= vehicle.name %>
              <br>
              <p><%= link_to "Show this vehicle", vehicle %> </p>
            </div>
          </div>
        <% end %>
      <%# </div> %>
    </div>
    <%= link_to "New vehicle", new_vehicle_path, class:"btn btn-dark"%>
  </div>
</div>
