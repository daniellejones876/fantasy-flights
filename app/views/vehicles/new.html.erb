<div class="container">
<h1>New vehicle</h1>

<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price_per_day %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :min_days %>
    <%= f.input :max_days %>
    <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to vehicles", vehicles_path %>
</div>
</div>
